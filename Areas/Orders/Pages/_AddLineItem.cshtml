@model OrderLineItem

@{
    var selectList = ViewData["AvailableInventory"] as SelectList;
}

 <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="ItemId" class="control-label"></label>
        <select asp-for="ItemId" class ="form-control" asp-items="selectList">
            <option value="">-- Select Item --</option>
        </select>

        <span asp-validation-for="ItemId" class="text-danger" />

    </div>
    <div class="form-group">
        <label asp-for="ItemQuantity" class="control-label"></label>
        <input asp-for="ItemQuantity" class="form-control" />
        <span asp-validation-for="ItemQuantity" class="text-danger"></span>
    </div>
</div>
