@page
@model Groc.Areas.Orders.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Order.UserId" class="control-label"></label>
                <select asp-for="Order.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="Order.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.OrderTotal" class="control-label"></label>
                <input asp-for="Order.OrderTotal" class="form-control" />
                <span asp-validation-for="Order.OrderTotal" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Order.Id" />
            <div class="form-group">
                <label asp-for="Order.Created" class="control-label"></label>
                <input asp-for="Order.Created" class="form-control" />
                <span asp-validation-for="Order.Created" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.Modified" class="control-label"></label>
                <input asp-for="Order.Modified" class="form-control" />
                <span asp-validation-for="Order.Modified" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.CreatedBy" class="control-label"></label>
                <input asp-for="Order.CreatedBy" class="form-control" />
                <span asp-validation-for="Order.CreatedBy" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Order.IsDeleted" /> @Html.DisplayNameFor(model => model.Order.IsDeleted)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
